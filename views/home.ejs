<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
    <title>Home</title>
  </head>
  <body>
    <%- include('partials/nav') %>

    <div class="container">
      <div class="row">
        <% blogs.forEach((blog) => { %>
        <div class="col-md-4 mt-4">
          <div class="card">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Image" />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text"><%= blog.body.substring(0, 100) %>...</p>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read More</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
