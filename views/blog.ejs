<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="400px"/>
        <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" width="50px"> <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
        <h1>Comments (<%= comments.length%>)</h1>
       
        <% if (user) { %> <!-- locals.user is already set as 'user', no need for 'locals' -->
            <form action="/blog/comment/<%= blog._id %>" method="post"> <!-- Correct action -->
                <div class="mb-3">
                    <input type="text" name="content" class="form-control" placeholder="Enter your comment" required/>
                    <button class="btn btn-sm btn-primary mt-2" type="submit">Add</button>
                </div>
            </form>
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                    <div>
                        <img src="<%= comment.createdBy.profileImageURL %>" width="50px">
                        <%= comment.createdBy.fullName %> - <%= comment.content %>

                    </div>
                 
                <% }) %>
            </div>
        <% } else { %>
            <p>Please <a href="/user/signin">sign in</a> to add a comment.</p>
        <% } %>
    </div>

    <%- include('./partials/script') %>
</body>
</html>
